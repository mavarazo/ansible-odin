ansible_python_interpreter: /usr/bin/python3

###
### Global
###
hostname:
user: 
timezone: Europe/Zurich
base_port: 10000

###
### Docker
###
docker_username: 
docker_uid: 
docker_groupname: 
docker_gid: 

docker_home: 

dockerhub_username: 
dockerhub_password: 

###
### Traefik
###
traefik_data_directory: "{{ docker_home }}/traefik"
traefik_docker_image: traefik:latest
traefik_base_port: "{{ base_port + 10 }}"
traefik_port_http: "{{ traefik_base_port }}"
traefik_port_https: "{{ traefik_base_port + 1}}"
traefik_port_dashboard: "{{ traefik_base_port + 2}}"
traefik_acme_email: 
traefik_acme_caserver: https://acme-staging-v02.api.letsencrypt.org/directory
traefik_acme_domain: 
traefik_acme_domain_main: "main.{{ traefik_acme_domain }}"
traefik_acme_domain_sans: 
  - "sans01.{{ traefik_acme_domain }}"

###
### Portainer
###
portainer_username: "{{ docker_username }}"
portainer_groupname: "{{ docker_groupname }}"
portainer_docker_image: portainer/portainer:latest
portainer_data_directory: "{{ docker_home }}/portainer"
portainer_base_port: "{{ base_port + 20 }}"
portainer_port: "{{ portainer_base_port }}"

###
### Heimdall
###
heimdall_username: "{{ docker_username }}"
heimdall_uid: "{{ docker_uid }}"
heimdall_groupname: "{{ docker_groupname }}"
heimdall_gid: "{{ docker_gid }}"
heimdall_docker_image: linuxserver/heimdall:latest
heimdall_data_directory: "{{ docker_home }}/heimdall"
heimdall_base_port: "{{ base_port + 30 }}"
heimdall_port_http: "{{ heimdall_base_port }}"
heimdall_port_https: "{{ heimdall_base_port + 1 }}"

###
### Glances
###
glances_docker_image: nicolargo/glances
glances_base_port: "{{ base_port + 40 }}"
glances_port_one: "{{ glances_base_port }}"
glances_port_two: "{{ glances_base_port + 1}}"

###
### MariaDB
###
mariadb_docker_image: linuxserver/mariadb:latest
mariadb_root_password:  

###
### Nextcloud
###
nextcloud_username: "{{ docker_username }}"
nextcloud_uid: "{{ docker_uid }}"
nextcloud_groupname: "{{ docker_groupname }}"
nextcloud_gid: "{{ docker_gid }}"
nextcloud_docker_image: linuxserver/nextcloud:latest
nextcloud_data_directory: "{{ docker_home }}/nextcloud"
nextcloud_base_port: "{{ base_port + 50 }}"
nextcloud_port_webgui: "{{ nextcloud_base_port }}"
nextcloud_port_database: "{{ nextcloud_base_port + 1 }}"
nextcloud_database_database: nextcloud
nextcloud_database_username: 
nextcloud_database_password: 
